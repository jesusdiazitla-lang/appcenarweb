# ============================================
# .env.example - AppCenar
# Copiar a .env y configurar valores reales
# ============================================

# ============================================
# CONFIGURACIÓN GENERAL
# ============================================
NODE_ENV=development
PORT=8080

# ============================================
# BASE DE DATOS
# ============================================
# MongoDB Local (para Docker Compose)
DEV_MONGODB_URI=mongodb://localhost:27017/appcenar

# MongoDB Atlas (para producción)
MONGODB_URI=mongodb+srv://usuario:password@cluster.mongodb.net/appcenar

# MongoDB QA
QA_MONGODB_URI=mongodb://localhost:27017/appcenar_qa

# ============================================
# SEGURIDAD
# ============================================
# Generar con: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
SESSION_SECRET=cambiar_por_secret_aleatorio_minimo_32_caracteres
COOKIE_SECRET=cambiar_por_otro_secret_diferente_32_caracteres

# ============================================
# EMAIL
# ============================================
EMAIL_SERVICE=gmail
EMAIL_USER=tu_email@gmail.com
EMAIL_PASS=tu_password_de_aplicacion
EMAIL_MOCK_MODE=true

# ============================================
# APLICACIÓN
# ============================================
BASE_URL=http://localhost:8080
PREVIEW_MODE=false

# ============================================
# PROXY (para Railway/Heroku)
# ============================================
TRUST_PROXY=1