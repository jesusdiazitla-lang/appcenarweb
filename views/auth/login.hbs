<div class="row justify-content-center">
  <div class="col-md-5">
    <div class="card shadow">
      <div class="card-body p-5">
        <div class="text-center mb-4">
          <i class="bi bi-shop display-1 text-primary"></i>
          <h2 class="mt-3 fw-bold">Iniciar Sesión</h2>
          <p class="text-muted">Ingresa a tu cuenta de AppCenar</p>
        </div>

        <form action="/auth/login" method="POST">
          <div class="mb-3">
            <label for="usuarioOrEmail" class="form-label">
              <i class="bi bi-person"></i> Usuario o Correo
            </label>
            <input 
              type="text" 
              class="form-control" 
              id="usuarioOrEmail" 
              name="usuarioOrEmail" 
              placeholder="usuario o correo@ejemplo.com"
              required
              autofocus
            >
          </div>

          <div class="mb-3">
            <label for="password" class="form-label">
              <i class="bi bi-lock"></i> Contraseña
            </label>
            <input 
              type="password" 
              class="form-control" 
              id="password" 
              name="password" 
              placeholder="••••••••"
              required
            >
          </div>

          <div class="mb-3 text-end">
            <a href="/auth/forgot-password" class="text-decoration-none small">
              ¿Olvidaste tu contraseña?
            </a>
          </div>

          <button type="submit" class="btn btn-primary w-100 py-2">
            <i class="bi bi-box-arrow-in-right"></i> Iniciar Sesión
          </button>
        </form>

        <hr class="my-4">

        <div class="text-center">
          <p class="mb-2">¿No tienes cuenta?</p>
          <div class="d-grid gap-2">
            <a href="/auth/register-cliente" class="btn btn-outline-success">
              <i class="bi bi-person-plus"></i> Registrarme como Cliente/Delivery
            </a>
            <a href="/auth/register-comercio" class="btn btn-outline-primary">
              <i class="bi bi-shop-window"></i> Registrar mi Comercio
            </a>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>