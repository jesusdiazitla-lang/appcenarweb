<div class="row justify-content-center">
  <div class="col-md-5">
    <div class="card shadow">
      <div class="card-body p-5">
        <div class="text-center mb-4">
          <i class="bi bi-key display-1 text-warning"></i>
          <h2 class="mt-3 fw-bold">Recuperar Contrase√±a</h2>
          <p class="text-muted">Ingresa tu usuario o correo para recibir instrucciones</p>
        </div>

        <form action="/auth/forgot-password" method="POST">
          <div class="mb-3">
            <label for="usuarioOrEmail" class="form-label">
              <i class="bi bi-person"></i> Usuario o Correo
            </label>
            <input 
              type="text" 
              class="form-control" 
              id="usuarioOrEmail" 
              name="usuarioOrEmail" 
              placeholder="usuario o correo@ejemplo.com"
              required
              autofocus
            >
          </div>

          <button type="submit" class="btn btn-warning w-100 py-2">
            <i class="bi bi-send"></i> Enviar Instrucciones
          </button>
        </form>

        <hr class="my-4">

        <div class="text-center">
          <a href="/auth/login" class="text-decoration-none">
            <i class="bi bi-arrow-left"></i> Volver al Login
          </a>
        </div>
      </div>
    </div>
  </div>
</div>