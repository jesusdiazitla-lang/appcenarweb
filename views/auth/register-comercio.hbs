<div class="row justify-content-center">
  <div class="col-md-8 col-lg-6">
    <div class="card shadow">
      <div class="card-body p-5">
        <div class="text-center mb-4">
          <i class="bi bi-shop-window display-1 text-primary"></i>
          <h2 class="mt-3 fw-bold">Registrar Comercio</h2>
          <p class="text-muted">Únete a AppCenar como comercio</p>
        </div>

        <form action="/auth/register-comercio" method="POST" enctype="multipart/form-data">
          <div class="mb-3">
            <label for="nombreComercio" class="form-label">
              <i class="bi bi-shop"></i> Nombre del Comercio *
            </label>
            <input 
              type="text" 
              class="form-control" 
              id="nombreComercio" 
              name="nombreComercio" 
              placeholder="Restaurante El Buen Sabor"
              required
            >
          </div>

          <div class="row">
            <div class="col-md-6 mb-3">
              <label for="telefono" class="form-label">
                <i class="bi bi-telephone"></i> Teléfono *
              </label>
              <input 
                type="tel" 
                class="form-control" 
                id="telefono" 
                name="telefono" 
                placeholder="8091234567"
                pattern="[0-9]{10}"
                required
              >
              <small class="text-muted">10 dígitos sin guiones</small>
            </div>

            <div class="col-md-6 mb-3">
              <label for="correo" class="form-label">
                <i class="bi bi-envelope"></i> Correo *
              </label>
              <input 
                type="email" 
                class="form-control" 
                id="correo" 
                name="correo" 
                placeholder="comercio@ejemplo.com"
                required
              >
            </div>
          </div>

          <div class="mb-3">
            <label for="logoComercio" class="form-label">
              <i class="bi bi-image"></i> Logo del Comercio (Opcional)
            </label>
            <input 
              type="file" 
              class="form-control" 
              id="logoComercio" 
              name="logoComercio"
              accept="image/*"
            >
          </div>

          <div class="row">
            <div class="col-md-6 mb-3">
              <label for="horaApertura" class="form-label">
                <i class="bi bi-clock"></i> Hora de Apertura *
              </label>
              <input 
                type="time" 
                class="form-control" 
                id="horaApertura" 
                name="horaApertura" 
                required
              >
            </div>

            <div class="col-md-6 mb-3">
              <label for="horaCierre" class="form-label">
                <i class="bi bi-clock-fill"></i> Hora de Cierre *
              </label>
              <input 
                type="time" 
                class="form-control" 
                id="horaCierre" 
                name="horaCierre" 
                required
              >
            </div>
          </div>

          <div class="mb-3">
            <label for="tipoComercio" class="form-label">
              <i class="bi bi-tags"></i> Tipo de Comercio *
            </label>
            <select class="form-select" id="tipoComercio" name="tipoComercio" required>
              <option value="">Seleccione un tipo</option>
              {{#each tiposComercio}}
                <option value="{{this._id}}">{{this.nombre}}</option>
              {{/each}}
            </select>
            {{#unless tiposComercio.length}}
              <small class="text-danger d-block mt-2">
                <i class="bi bi-exclamation-triangle"></i> 
                No hay tipos de comercio disponibles. Contacta al administrador.
              </small>
            {{/unless}}
          </div>

          <div class="row">
            <div class="col-md-6 mb-3">
              <label for="password" class="form-label">
                <i class="bi bi-lock"></i> Contraseña *
              </label>
              <input 
                type="password" 
                class="form-control" 
                id="password" 
                name="password" 
                minlength="6"
                required
              >
              <small class="text-muted">Mínimo 6 caracteres</small>
            </div>

            <div class="col-md-6 mb-3">
              <label for="confirmarPassword" class="form-label">
                <i class="bi bi-lock-fill"></i> Confirmar Contraseña *
              </label>
              <input 
                type="password" 
                class="form-control" 
                id="confirmarPassword" 
                name="confirmarPassword" 
                minlength="6"
                required
              >
            </div>
          </div>

          <button 
            type="submit" 
            class="btn btn-primary w-100 py-2 mt-3"
            {{#unless tiposComercio.length}}disabled{{/unless}}
          >
            <i class="bi bi-shop-window"></i> Registrar Comercio
          </button>
        </form>

        <hr class="my-4">

        <div class="text-center">
          <p class="mb-0">¿Ya tienes cuenta? 
            <a href="/auth/login" class="text-decoration-none fw-bold">Inicia Sesión</a>
          </p>
        </div>
      </div>
    </div>
  </div>
</div>