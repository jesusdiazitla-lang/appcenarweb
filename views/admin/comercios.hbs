<div class="container-fluid py-4">
  <div class="mb-4">
    <h2 class="fw-bold"><i class="bi bi-shop"></i> Gestión de Comercios</h2>
    <p class="text-muted">Administra las cuentas de comercios del sistema</p>
  </div>

  {{#if comercios.length}}
    <div class="card shadow">
      <div class="card-body">
        <div class="table-responsive">
          <table class="table table-hover align-middle">
            <thead>
              <tr>
                <th>Logo</th>
                <th>Nombre del Comercio</th>
                <th>Tipo</th>
                <th>Correo</th>
                <th>Teléfono</th>
                <th>Horario</th>
                <th class="text-center">Pedidos</th>
                <th class="text-center">Estado</th>
                <th class="text-center">Acción</th>
              </tr>
            </thead>
            <tbody>
              {{#each comercios}}
                <tr>
                  <td>
                    {{!-- ✅ CORRECCIÓN: Usar logoComercio consistentemente --}}
                    {{#if this.logoComercio}}
                      <img src="{{this.logoComercio}}" alt="{{this.nombreComercio}}" style="max-height: 50px; max-width: 70px; object-fit: contain; border-radius: 8px;">
                    {{else}}
                      <div style="width: 70px; height: 50px; background: #f0f0f0; border-radius: 8px; display: flex; align-items: center; justify-content: center;">
                        <i class="bi bi-shop-window fs-4 text-muted"></i>
                      </div>
                    {{/if}}
                  </td>
                  <td>
                    <strong>{{this.nombreComercio}}</strong>
                  </td>
                  <td>
                    {{#if this.tipoComercio}}
                      <span class="badge bg-info">
                        <i class="bi bi-tag"></i> {{this.tipoComercio.nombre}}
                      </span>
                    {{else}}
                      <span class="badge bg-secondary">Sin tipo</span>
                    {{/if}}
                  </td>
                  <td>
                    <small>{{this.correo}}</small>
                  </td>
                  <td>
                    <small>{{this.telefono}}</small>
                  </td>
                  <td>
                    <small class="text-muted">
                      <i class="bi bi-clock"></i> {{this.horaApertura}} - {{this.horaCierre}}
                    </small>
                  </td>
                  <td class="text-center">
                    <span class="badge bg-primary">{{this.cantidadPedidos}}</span>
                  </td>
                  <td class="text-center">
                    {{#if this.activo}}
                      <span class="badge bg-success">
                        <i class="bi bi-check-circle"></i> Activo
                      </span>
                    {{else}}
                      <span class="badge bg-danger">
                        <i class="bi bi-x-circle"></i> Inactivo
                      </span>
                    {{/if}}
                  </td>
                  <td class="text-center">
                    <form action="/admin/comercios/toggle-activo/{{this._id}}" method="POST" style="display: inline;">
                      {{#if this.activo}}
                        <button type="submit" class="btn btn-sm btn-outline-danger" title="Inactivar comercio">
                          <i class="bi bi-x-circle"></i> Inactivar
                        </button>
                      {{else}}
                        <button type="submit" class="btn btn-sm btn-outline-success" title="Activar comercio">
                          <i class="bi bi-check-circle"></i> Activar
                        </button>
                      {{/if}}
                    </form>
                  </td>
                </tr>
              {{/each}}
            </tbody>
          </table>
        </div>
      </div>
    </div>
  {{else}}
    <div class="card shadow">
      <div class="card-body text-center py-5">
        <i class="bi bi-shop display-1 text-muted d-block mb-3"></i>
        <h4>No hay comercios registrados</h4>
        <p class="text-muted mb-0">Los comercios que se registren aparecerán aquí</p>
      </div>
    </div>
  {{/if}}
</div>