<div class="container-fluid py-4">
  <div class="d-flex justify-content-between align-items-center mb-4">
    <div>
      <h2 class="fw-bold"><i class="bi bi-tags"></i> Tipos de Comercio</h2>
      <p class="text-muted mb-0">Gestiona las categor√≠as de comercios disponibles</p>
    </div>
    <a href="/admin/tipos-comercio/crear" class="btn btn-dark">
      <i class="bi bi-plus-circle"></i> Nuevo Tipo
    </a>
  </div>

  {{#if tiposComercios.length}}
    <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
      {{#each tiposComercios}}
        <div class="col">
          <div class="card h-100 shadow-sm">
            <div class="card-body">
              <div class="text-center mb-3">
                {{#if this.icono}}
                  <img src="{{this.icono}}" alt="{{this.nombre}}" style="max-height: 80px; object-fit: contain;">
                {{else}}
                  <i class="bi bi-shop display-4 text-muted"></i>
                {{/if}}
              </div>
              
              <h5 class="card-title fw-bold text-center mb-2">{{this.nombre}}</h5>
              <p class="card-text text-muted text-center small mb-3">{{this.descripcion}}</p>
              
              <div class="text-center mb-3">
                <span class="badge bg-info">
                  <i class="bi bi-shop-window"></i> {{this.cantidadComercios}} {{#if (eq this.cantidadComercios 1)}}comercio{{else}}comercios{{/if}}
                </span>
              </div>
              
              <div class="d-flex gap-2">
                <a href="/admin/tipos-comercio/editar/{{this._id}}" class="btn btn-sm btn-outline-primary flex-grow-1">
                  <i class="bi bi-pencil"></i> Editar
                </a>
                <a href="/admin/tipos-comercio/eliminar/{{this._id}}" class="btn btn-sm btn-outline-danger">
                  <i class="bi bi-trash"></i>
                </a>
              </div>
            </div>
          </div>
        </div>
      {{/each}}
    </div>
  {{else}}
    <div class="card shadow">
      <div class="card-body text-center py-5">
        <i class="bi bi-tags display-1 text-muted d-block mb-3"></i>
        <h4>No hay tipos de comercio creados</h4>
        <p class="text-muted mb-4">Crea tipos de comercio para que los comercios puedan registrarse</p>
        <a href="/admin/tipos-comercio/crear" class="btn btn-dark">
          <i class="bi bi-plus-circle"></i> Crear Primer Tipo
        </a>
      </div>
    </div>
  {{/if}}
</div>