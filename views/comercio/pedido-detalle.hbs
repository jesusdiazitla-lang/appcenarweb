<div class="container py-4">
  <div class="mb-4">
    <a href="/comercio/home" class="btn btn-outline-secondary mb-2">
      <i class="bi bi-arrow-left"></i> Volver a Pedidos
    </a>
    <h2 class="fw-bold"><i class="bi bi-receipt"></i> Detalle del Pedido</h2>
  </div>

  <div class="row">
    <!-- Información del Pedido -->
    <div class="col-lg-8">
      <!-- Info General -->
      <div class="card shadow mb-3">
        <div class="card-header bg-primary text-white">
          <div class="d-flex justify-content-between align-items-center">
            <h5 class="mb-0"><i class="bi bi-person-circle"></i> Información del Pedido</h5>
            {{#if (eq pedido.estado "pendiente")}}
              <span class="badge bg-warning text-dark">
                <i class="bi bi-clock"></i> Pendiente
              </span>
            {{else if (eq pedido.estado "en proceso")}}
              <span class="badge bg-info">
                <i class="bi bi-truck"></i> En Proceso
              </span>
            {{else if (eq pedido.estado "completado")}}
              <span class="badge bg-success">
                <i class="bi bi-check-circle"></i> Completado
              </span>
            {{/if}}
          </div>
        </div>
        <div class="card-body">
          <div class="row">
            <div class="col-md-6 mb-3">
              <strong><i class="bi bi-person"></i> Cliente:</strong>
              <p class="mb-0">{{pedido.cliente.nombre}} {{pedido.cliente.apellido}}</p>
              <small class="text-muted">
                <i class="bi bi-telephone"></i> {{pedido.cliente.telefono}}
              </small>
            </div>

            <div class="col-md-6 mb-3">
              <strong><i class="bi bi-calendar"></i> Fecha y Hora:</strong>
              <p class="mb-0">{{formatDate pedido.fechaPedido}}</p>
            </div>
          </div>

          <!-- Dirección de Entrega - SOLO si está en proceso -->
          {{#if (eq pedido.estado "en proceso")}}
            <div class="mb-3">
              <strong><i class="bi bi-geo-alt-fill text-danger"></i> Dirección de Entrega:</strong>
              {{#if pedido.direccion}}
                <div class="alert alert-info mt-2 mb-0">
                  <div class="d-flex align-items-start">
                    <i class="bi bi-map fs-4 me-3"></i>
                    <div>
                      <strong class="d-block">{{pedido.direccion.nombre}}</strong>
                      <p class="mb-0">{{pedido.direccion.descripcion}}</p>
                    </div>
                  </div>
                </div>
              {{else}}
                <p class="text-muted mb-0">No disponible</p>
              {{/if}}
            </div>
          {{/if}}

          {{#if pedido.delivery}}
            <div class="alert alert-info mb-0">
              <div class="d-flex justify-content-between align-items-center">
                <div>
                  <strong><i class="bi bi-person-badge"></i> Delivery Asignado:</strong><br>
                  {{pedido.delivery.nombre}} {{pedido.delivery.apellido}}
                  <br>
                  <small><i class="bi bi-telephone"></i> {{pedido.delivery.telefono}}</small>
                </div>
                {{#if (eq pedido.estado "en proceso")}}
                  <span class="badge bg-info">En Camino</span>
                {{else if (eq pedido.estado "completado")}}
                  <span class="badge bg-success">Entregado</span>
                {{/if}}
              </div>
            </div>
          {{/if}}
        </div>
      </div>

      <!-- Productos -->
      <div class="card shadow">
        <div class="card-header">
          <h5 class="mb-0"><i class="bi bi-box-seam"></i> Productos del Pedido</h5>
        </div>
        <div class="card-body">
          <div class="list-group list-group-flush">
            {{#each pedido.productos}}
              <div class="list-group-item d-flex align-items-center">
                {{#if this.foto}}
                  <img src="{{this.foto}}" alt="{{this.nombre}}" class="me-3 rounded" style="width: 60px; height: 60px; object-fit: cover;">
                {{else}}
                  <div class="me-3 bg-light rounded d-flex align-items-center justify-content-center" style="width: 60px; height: 60px;">
                    <i class="bi bi-image text-muted"></i>
                  </div>
                {{/if}}
                <div class="flex-grow-1">
                  <h6 class="mb-0">{{this.nombre}}</h6>
                </div>
                <span class="fw-bold text-success">{{formatCurrency this.precio}}</span>
              </div>
            {{/each}}
          </div>
        </div>
      </div>
    </div>

    <!-- Resumen y Acciones -->
    <div class="col-lg-4">
      <!-- Resumen del Pedido -->
      <div class="card shadow mb-3 sticky-top" style="top: 20px;">
        <div class="card-header bg-success text-white">
          <h5 class="mb-0"><i class="bi bi-calculator"></i> Resumen</h5>
        </div>
        <div class="card-body">
          <div class="d-flex justify-content-between mb-2">
            <span>Subtotal:</span>
            <strong>{{formatCurrency pedido.subtotal}}</strong>
          </div>
          <div class="d-flex justify-content-between mb-2">
            <span>ITBIS:</span>
            <strong>{{formatCurrency pedido.itbis}}</strong>
          </div>
          <hr>
          <div class="d-flex justify-content-between">
            <strong class="fs-5">Total:</strong>
            <strong class="fs-5 text-success">{{formatCurrency pedido.total}}</strong>
          </div>
        </div>
      </div>

      <!-- Asignar Delivery -->
      {{#if (eq pedido.estado "pendiente")}}
        <div class="card shadow border-warning">
          <div class="card-body text-center">
            <i class="bi bi-truck display-1 text-warning d-block mb-3"></i>
            <h5 class="fw-bold mb-3">Asignar Delivery</h5>
            <p class="text-muted mb-4">
              Este pedido está pendiente. Asigna un delivery disponible para que lo entregue al cliente.
            </p>
            
            <form action="/comercio/pedido/{{pedido._id}}/asignar-delivery" method="POST">
        <button type="submit" class="btn btn-warning btn-lg w-100 text-dark">
          <i class="bi bi-person-plus-fill"></i> Asignar Delivery
        </button>
      </form>

      <small class="text-muted d-block mt-3">
        <i class="bi bi-info-circle"></i> Se asignará automáticamente un delivery disponible
      </small>
    </div>
  </div>
      {{else if (eq pedido.estado "en proceso")}}
        <div class="card shadow border-info">
          <div class="card-body text-center">
            <i class="bi bi-truck display-1 text-info d-block mb-3"></i>
            <h5 class="fw-bold mb-2">Pedido En Camino</h5>
            <p class="text-muted mb-0">
              El delivery está en camino para entregar este pedido.
            </p>
          </div>
        </div>
      {{else if (eq pedido.estado "completado")}}
        <div class="card shadow border-success">
          <div class="card-body text-center">
            <i class="bi bi-check-circle-fill display-1 text-success d-block mb-3"></i>
            <h5 class="fw-bold text-success mb-2">¡Pedido Completado!</h5>
            <p class="text-muted mb-0">
              Este pedido fue entregado exitosamente.
            </p>
          </div>
        </div>
      {{/if}}
    </div>
  </div>
</div>