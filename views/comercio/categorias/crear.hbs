<div class="container py-4">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <div class="card shadow">
        <div class="card-header bg-primary text-white">
          <h4 class="mb-0"><i class="bi bi-plus-circle"></i> Nueva Categoría</h4>
        </div>
        <div class="card-body p-4">
          <form action="/comercio/categorias/crear" method="POST">
            <div class="mb-3">
              <label for="nombre" class="form-label fw-bold">
                <i class="bi bi-tag"></i> Nombre de la Categoría *
              </label>
              <input 
                type="text" 
                class="form-control" 
                id="nombre" 
                name="nombre" 
                placeholder="Ej: Entradas, Platos Principales, Postres"
                required
                autofocus
              >
              <small class="text-muted">Un nombre descriptivo para agrupar tus productos</small>
            </div>

            <div class="mb-3">
              <label for="descripcion" class="form-label fw-bold">
                <i class="bi bi-text-paragraph"></i> Descripción *
              </label>
              <textarea 
                class="form-control" 
                id="descripcion" 
                name="descripcion" 
                rows="4" 
                placeholder="Describe brevemente esta categoría..."
                required
              ></textarea>
              <small class="text-muted">Ayuda a identificar mejor esta categoría</small>
            </div>

            <hr class="my-4">

            <div class="d-grid gap-2">
              <button type="submit" class="btn btn-primary btn-lg">
                <i class="bi bi-check-circle"></i> Crear Categoría
              </button>
              <a href="/comercio/categorias" class="btn btn-outline-secondary">
                <i class="bi bi-x-circle"></i> Cancelar
              </a>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>