<div class="container-fluid py-4">
  <div class="d-flex justify-content-between align-items-center mb-4">
    <div>
      <h2 class="fw-bold"><i class="bi bi-tags"></i> Mis Categorías</h2>
      <p class="text-muted mb-0">Organiza tus productos por categorías</p>
    </div>
    <a href="/comercio/categorias/crear" class="btn btn-primary">
      <i class="bi bi-plus-circle"></i> Nueva Categoría
    </a>
  </div>

  {{#if categorias.length}}
    <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
      {{#each categorias}}
        <div class="col">
          <div class="card h-100 shadow-sm">
            <div class="card-body">
              <div class="d-flex justify-content-between align-items-start mb-3">
                <div class="flex-grow-1">
                  <h5 class="card-title fw-bold mb-1">
                    <i class="bi bi-tag-fill text-primary"></i> {{this.nombre}}
                  </h5>
                  <p class="card-text text-muted small mb-2">{{this.descripcion}}</p>
                  <span class="badge bg-info">
                    <i class="bi bi-box-seam"></i> {{this.cantidadProductos}} {{#if (eq this.cantidadProductos 1)}}producto{{else}}productos{{/if}}
                  </span>
                </div>
              </div>
              
              <div class="d-flex gap-2">
                <a href="/comercio/categorias/editar/{{this._id}}" class="btn btn-sm btn-outline-primary flex-grow-1">
                  <i class="bi bi-pencil"></i> Editar
                </a>
                <a href="/comercio/categorias/eliminar/{{this._id}}" class="btn btn-sm btn-outline-danger">
                  <i class="bi bi-trash"></i>
                </a>
              </div>
            </div>
          </div>
        </div>
      {{/each}}
    </div>
  {{else}}
    <div class="card shadow">
      <div class="card-body text-center py-5">
        <i class="bi bi-tags display-1 text-muted d-block mb-3"></i>
        <h4>No tienes categorías creadas</h4>
        <p class="text-muted mb-4">Crea categorías para organizar mejor tus productos</p>
        <a href="/comercio/categorias/crear" class="btn btn-primary">
          <i class="bi bi-plus-circle"></i> Crear Primera Categoría
        </a>
      </div>
    </div>
  {{/if}}
</div>