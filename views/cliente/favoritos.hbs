<div class="container py-4">
  <div class="mb-4">
    <h2 class="fw-bold"><i class="bi bi-heart-fill text-danger"></i> Mis Favoritos</h2>
    <p class="text-muted">Tus comercios favoritos para acceso rápido</p>
  </div>

  {{#if favoritos.length}}
    <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
      {{#each favoritos}}
        <div class="col">
          <div class="card h-100 shadow-sm">
            <div class="card-body">
              <div class="d-flex justify-content-between align-items-start mb-3">
                <div class="flex-grow-1">
                  {{#if this.comercio.logoComercio}}
                    <img src="{{this.comercio.logoComercio}}" alt="{{this.comercio.nombreComercio}}" class="img-fluid mb-2" style="max-height: 60px; object-fit: contain;">
                  {{else}}
                    <i class="bi bi-shop-window display-6 text-primary"></i>
                  {{/if}}
                  <h5 class="card-title fw-bold mb-1">{{this.comercio.nombreComercio}}</h5>
                  <p class="text-muted small mb-0">
                    <i class="bi bi-clock"></i> {{this.comercio.horaApertura}} - {{this.comercio.horaCierre}}
                  </p>
                </div>
                <form action="/cliente/favorito/toggle/{{this.comercio._id}}" method="POST">
                  <button type="submit" class="btn btn-sm btn-danger" title="Remover de favoritos">
                    <i class="bi bi-heart-fill"></i>
                  </button>
                </form>
              </div>
              <a href="/cliente/catalogo/{{this.comercio._id}}" class="btn btn-success w-100">
                <i class="bi bi-bag"></i> Ver Menú
              </a>
            </div>
          </div>
        </div>
      {{/each}}
    </div>
  {{else}}
    <div class="card shadow">
      <div class="card-body text-center py-5">
        <i class="bi bi-heart display-1 text-muted d-block mb-3"></i>
        <h4>No tienes comercios favoritos</h4>
        <p class="text-muted mb-4">Agrega comercios a favoritos para acceder rápidamente a ellos</p>
        <a href="/cliente/home" class="btn btn-success">
          <i class="bi bi-shop"></i> Explorar Comercios
        </a>
      </div>
    </div>
  {{/if}}
</div>