<div class="container py-4">
  <div class="d-flex justify-content-between align-items-center mb-4">
    <div>
      <h2 class="fw-bold"><i class="bi bi-geo-alt"></i> Mis Direcciones</h2>
      <p class="text-muted mb-0">Gestiona tus direcciones de entrega</p>
    </div>
    <a href="/cliente/direcciones/crear" class="btn btn-success">
      <i class="bi bi-plus-circle"></i> Nueva Dirección
    </a>
  </div>

  {{#if direcciones.length}}
    <div class="row g-3">
      {{#each direcciones}}
        <div class="col-md-6">
          <div class="card shadow-sm h-100">
            <div class="card-body">
              <div class="d-flex justify-content-between align-items-start mb-3">
                <div>
                  <h5 class="fw-bold mb-1">
                    <i class="bi bi-geo-alt-fill text-success"></i> {{this.nombre}}
                  </h5>
                  <p class="text-muted mb-0">{{this.descripcion}}</p>
                </div>
              </div>
              
              <div class="d-flex gap-2">
                <a href="/cliente/direcciones/editar/{{this._id}}" class="btn btn-sm btn-outline-primary">
                  <i class="bi bi-pencil"></i> Editar
                </a>
                <a href="/cliente/direcciones/eliminar/{{this._id}}" class="btn btn-sm btn-outline-danger">
                  <i class="bi bi-trash"></i> Eliminar
                </a>
              </div>
            </div>
          </div>
        </div>
      {{/each}}
    </div>
  {{else}}
    <div class="card shadow">
      <div class="card-body text-center py-5">
        <i class="bi bi-geo-alt-slash display-1 text-muted d-block mb-3"></i>
        <h4>No tienes direcciones registradas</h4>
        <p class="text-muted mb-4">Agrega una dirección para poder realizar pedidos</p>
        <a href="/cliente/direcciones/crear" class="btn btn-success">
          <i class="bi bi-plus-circle"></i> Agregar Primera Dirección
        </a>
      </div>
    </div>
  {{/if}}
</div>