<div class="container py-4">
  <div class="row">
    <!-- Selecci贸n de Direcci贸n -->
    <div class="col-lg-7">
      <div class="card shadow">
        <div class="card-header bg-success text-white">
          <h5 class="mb-0"><i class="bi bi-geo-alt"></i> Selecciona tu direcci贸n de entrega</h5>
        </div>
        <div class="card-body">
          {{#if direcciones.length}}
            <form action="/cliente/crear-pedido" method="POST" id="form-pedido">
              <input type="hidden" name="comercioId" value="{{comercio._id}}">
              <input type="hidden" name="productosIds" value="{{productosIds}}">
              
              {{#each direcciones}}
                <div class="form-check card mb-3 direccion-card">
                  <div class="card-body">
                    <input 
                      class="form-check-input" 
                      type="radio" 
                      name="direccionId" 
                      id="direccion{{@index}}" 
                      value="{{this._id}}"
                      required
                    >
                    <label class="form-check-label w-100" for="direccion{{@index}}">
                      <div class="d-flex justify-content-between align-items-start">
                        <div>
                          <h6 class="fw-bold mb-1">{{this.nombre}}</h6>
                          <p class="text-muted mb-0">{{this.descripcion}}</p>
                        </div>
                        <i class="bi bi-geo-alt-fill text-success fs-4"></i>
                      </div>
                    </label>
                  </div>
                </div>
              {{/each}}

              <div class="d-grid gap-2 mt-4">
                <a href="/cliente/direcciones/crear" class="btn btn-outline-success">
                  <i class="bi bi-plus-circle"></i> Agregar Nueva Direcci贸n
                </a>
                <small class="text-muted text-center">
                  <i class="bi bi-info-circle"></i> Tu pedido quedar谩 guardado mientras creas la direcci贸n
                </small>
              </div>
            </form>
          {{else}}
            <div class="alert alert-warning text-center">
              <i class="bi bi-geo-alt fs-1 d-block mb-3"></i>
              <h5>No tienes direcciones registradas</h5>
              <p>Debes agregar al menos una direcci贸n para completar tu pedido.</p>
              <div class="alert alert-info d-inline-block mt-2">
                <i class="bi bi-cart-check"></i> <strong>Tu pedido quedar谩 guardado</strong> mientras creas la direcci贸n
              </div>
              <div class="d-grid mt-3">
                <a href="/cliente/direcciones/crear" class="btn btn-success btn-lg">
                  <i class="bi bi-plus-circle"></i> Agregar Direcci贸n Ahora
                </a>
              </div>
            </div>
          {{/if}}
        </div>
      </div>
    </div>

    <!-- Resumen del Pedido -->
    <div class="col-lg-5">
      <div class="card shadow sticky-top" style="top: 20px;">
        <div class="card-header bg-primary text-white">
          <h5 class="mb-0"><i class="bi bi-receipt"></i> Resumen del Pedido</h5>
        </div>
        <div class="card-body">
          <!-- Info del Comercio -->
          <div class="text-center mb-3 pb-3 border-bottom">
            {{#if comercio.logoComercio}}
              <img src="{{comercio.logoComercio}}" alt="{{comercio.nombreComercio}}" style="max-height: 50px;" class="mb-2">
            {{/if}}
            <h6 class="fw-bold mb-0">{{comercio.nombreComercio}}</h6>
          </div>

          <!-- Productos CON CANTIDADES -->
          <h6 class="fw-bold mb-3">Productos:</h6>
          <div style="max-height: 300px; overflow-y: auto;">
            {{#each productos}}
              <div class="d-flex justify-content-between align-items-center mb-3 pb-2 border-bottom">
                <div class="flex-grow-1">
                  <div class="d-flex align-items-center gap-2">
                    <span class="badge bg-secondary">{{this.cantidad}}x</span>
                    <span>{{this.nombre}}</span>
                  </div>
                  <small class="text-muted">{{formatCurrency this.precio}} c/u</small>
                </div>
                <span class="text-success fw-bold">{{formatCurrency this.subtotalItem}}</span>
              </div>
            {{/each}}
          </div>

          <hr>

          <!-- Totales -->
          <div class="d-flex justify-content-between mb-2">
            <span>Subtotal:</span>
            <strong>RD$ {{subtotal}}</strong>
          </div>
          <div class="d-flex justify-content-between mb-2">
            <span>ITBIS ({{itbis}}%):</span>
            <strong>RD$ {{valorItbis}}</strong>
          </div>
          <hr>
          <div class="d-flex justify-content-between">
            <strong class="fs-5">Total:</strong>
            <strong class="fs-5 text-success">RD$ {{total}}</strong>
          </div>
        </div>
        <div class="card-footer">
          <div class="d-grid gap-2">
            <button type="button" onclick="history.back()" class="btn btn-outline-secondary">
              <i class="bi bi-arrow-left"></i> Volver
            </button>
            {{#if direcciones.length}}
              <button type="submit" form="form-pedido" class="btn btn-success btn-lg" id="btn-realizar-pedido">
                <i class="bi bi-check-circle"></i> Realizar Pedido
              </button>
            {{/if}}
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<script>
  // Prevenir doble click en el bot贸n
  document.getElementById('btn-realizar-pedido')?.addEventListener('click', function(e) {
    const form = document.getElementById('form-pedido');
    
    // Validar que se haya seleccionado una direcci贸n
    const direccionSeleccionada = form.querySelector('input[name="direccionId"]:checked');
    
    if (!direccionSeleccionada) {
      e.preventDefault();
      alert('Por favor selecciona una direcci贸n de entrega');
      return false;
    }
    
    // Deshabilitar el bot贸n para evitar doble env铆o
    this.disabled = true;
    this.innerHTML = '<span class="spinner-border spinner-border-sm me-2"></span>Procesando...';
    
    console.log(' Enviando pedido con:');
    console.log('  - Comercio:', form.querySelector('[name="comercioId"]').value);
    console.log('  - Productos:', form.querySelector('[name="productosIds"]').value);
    console.log('  - Direcci贸n:', direccionSeleccionada.value);
    
    // Enviar el formulario
    form.submit();
  });
</script>

<style>
  .direccion-card {
    cursor: pointer;
    transition: all 0.2s ease;
    border-radius: 8px;
  }

  .direccion-card:hover {
    border-color: #198754;
    box-shadow: 0 0 10px rgba(25, 135, 84, 0.2);
  }

  .direccion-card input:checked ~ .card-body {
    background-color: #f0f9f4;
    border-left: 4px solid #198754;
  }
</style>