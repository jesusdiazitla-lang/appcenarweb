<div class="container py-4">
  <div class="mb-4">
    <a href="/delivery/home" class="btn btn-outline-secondary mb-2">
      <i class="bi bi-arrow-left"></i> Volver a Mis Entregas
    </a>
    <h2 class="fw-bold"><i class="bi bi-receipt"></i> Detalle del Pedido</h2>
  </div>

  <div class="row">
    <!-- Información del Pedido -->
    <div class="col-lg-8">
      <div class="card shadow mb-3">
        <div class="card-header bg-warning text-dark">
          <div class="d-flex justify-content-between align-items-center">
            <h5 class="mb-0"><i class="bi bi-shop-window"></i> {{pedido.comercio.nombreComercio}}</h5>
            {{#if (eq pedido.estado "en proceso")}}
              <span class="badge bg-dark">
                <i class="bi bi-clock-history"></i> En Proceso
              </span>
            {{else if (eq pedido.estado "completado")}}
              <span class="badge bg-success">
                <i class="bi bi-check-circle"></i> Completado
              </span>
            {{/if}}
          </div>
        </div>
        <div class="card-body">
          <div class="mb-3">
            <strong><i class="bi bi-calendar"></i> Fecha y Hora del Pedido:</strong>
            <p class="mb-0">{{formatDate pedido.fechaPedido}}</p>
          </div>

          <!-- Dirección de Entrega - SOLO VISIBLE MIENTRAS ESTÁ EN PROCESO -->
          {{#if (eq pedido.estado "en proceso")}}
            <div class="alert alert-warning border-warning border-3">
              <div class="d-flex align-items-start">
                <i class="bi bi-geo-alt-fill fs-1 text-danger me-3"></i>
                <div class="flex-grow-1">
                  <h5 class="fw-bold mb-3">
                    <i class="bi bi-pin-map"></i> Dirección de Entrega:
                  </h5>
                  {{#if pedido.direccion}}
                    <div class="bg-white p-3 rounded border border-dark">
                      <strong class="d-block fs-5 text-dark mb-2">
                        <i class="bi bi-house-door"></i> {{pedido.direccion.nombre}}
                      </strong>
                      <p class="mb-0 fs-6 text-dark">
                        <i class="bi bi-signpost"></i> {{pedido.direccion.descripcion}}
                      </p>
                    </div>
                  {{else}}
                    <div class="bg-white p-3 rounded border border-danger">
                      <p class="text-danger mb-0">
                        <i class="bi bi-exclamation-triangle"></i> 
                        <strong>Dirección no disponible</strong> - Contacta con soporte
                      </p>
                    </div>
                  {{/if}}
                </div>
              </div>
            </div>
          {{else}}
            <!-- Mensaje cuando el pedido está completado -->
            <div class="alert alert-success">
              <i class="bi bi-shield-check"></i> <strong>Privacidad protegida:</strong> 
              La dirección del cliente ya no es visible una vez completada la entrega.
            </div>
          {{/if}}

          <div class="mb-3">
            <strong><i class="bi bi-person"></i> Cliente:</strong>
            <p class="mb-0">
              {{pedido.cliente.nombre}} {{pedido.cliente.apellido}}
              <br>
              <small class="text-muted">
                <i class="bi bi-telephone"></i> {{pedido.cliente.telefono}}
              </small>
            </p>
          </div>
        </div>
      </div>

      <!-- Productos -->
      <div class="card shadow">
        <div class="card-header">
          <h5 class="mb-0"><i class="bi bi-box-seam"></i> Productos del Pedido</h5>
        </div>
        <div class="card-body">
          <div class="list-group list-group-flush">
            {{#each pedido.productos}}
              <div class="list-group-item d-flex align-items-center">
                {{#if this.foto}}
                  <img src="{{this.foto}}" alt="{{this.nombre}}" class="me-3 rounded" style="width: 60px; height: 60px; object-fit: cover;">
                {{else}}
                  <div class="me-3 bg-light rounded d-flex align-items-center justify-content-center" style="width: 60px; height: 60px;">
                    <i class="bi bi-image text-muted"></i>
                  </div>
                {{/if}}
                <div class="flex-grow-1">
                  <h6 class="mb-0">{{this.nombre}}</h6>
                </div>
                <span class="fw-bold text-success">{{formatCurrency this.precio}}</span>
              </div>
            {{/each}}
          </div>
        </div>
      </div>
    </div>

    <!-- Resumen y Acción -->
    <div class="col-lg-4">
      <!-- Resumen del Pedido -->
      <div class="card shadow mb-3 sticky-top" style="top: 20px;">
        <div class="card-header bg-success text-white">
          <h5 class="mb-0"><i class="bi bi-calculator"></i> Resumen</h5>
        </div>
        <div class="card-body">
          <div class="d-flex justify-content-between mb-2">
            <span>Subtotal:</span>
            <strong>{{formatCurrency pedido.subtotal}}</strong>
          </div>
          <div class="d-flex justify-content-between mb-2">
            <span>ITBIS:</span>
            <strong>{{formatCurrency pedido.itbis}}</strong>
          </div>
          <hr>
          <div class="d-flex justify-content-between">
            <strong class="fs-5">Total a Cobrar:</strong>
            <strong class="fs-5 text-success">{{formatCurrency pedido.total}}</strong>
          </div>
        </div>
      </div>

      <!-- Acción según estado -->
      {{#if (eq pedido.estado "en proceso")}}
        <div class="card shadow border-warning">
          <div class="card-body text-center">
            <i class="bi bi-check-circle display-1 text-warning d-block mb-3"></i>
            <h5 class="fw-bold mb-3">¿Pedido Entregado?</h5>
            <p class="text-muted mb-4">
              Confirma cuando hayas entregado el pedido al cliente y cobrado el monto total.
            </p>
            
            <form action="/delivery/pedido/{{pedido._id}}/completar" method="POST">
              <button type="submit" class="btn btn-warning btn-lg w-100 text-dark">
                <i class="bi bi-check-circle-fill"></i> Completar Entrega
              </button>
            </form>
          </div>
        </div>
      {{else if (eq pedido.estado "completado")}}
        <div class="card shadow border-success">
          <div class="card-body text-center">
            <i class="bi bi-check-circle-fill display-1 text-success d-block mb-3"></i>
            <h5 class="fw-bold text-success mb-2">¡Pedido Completado!</h5>
            <p class="text-muted mb-0">
              Este pedido ya fue entregado exitosamente.
            </p>
          </div>
        </div>
      {{/if}}
    </div>
  </div>
</div>