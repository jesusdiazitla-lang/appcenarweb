{
  "name": "appcenar",
  "version": "1.0.0",
  "description": "Sistema de pedidos y delivery con Node.js, Express, MongoDB",
  "main": "app.js",
  "scripts": {
    "start": "cross-env NODE_ENV=production node app.js",
    "dev": "cross-env NODE_ENV=development nodemon app.js",
    "debug": "cross-env NODE_ENV=development nodemon --inspect app.js",
    "qa": "cross-env NODE_ENV=qa node app.js",
    "fix-deliveries": "node scripts/fixDeliveries.js",
    "prod": "cross-env NODE_ENV=production node app.js",
    "test": "cross-env NODE_ENV=test jest --coverage --verbose",
    "test:watch": "cross-env NODE_ENV=test jest --watch",
    "test:unit": "cross-env NODE_ENV=test jest tests/unit --coverage",
    "test:integration": "cross-env NODE_ENV=test jest tests/integration --coverage",
    "test:ci": "cross-env NODE_ENV=test jest --ci --coverage --maxWorkers=2 --forceExit",
    "test:debug": "cross-env NODE_ENV=test node --inspect-brk node_modules/.bin/jest --runInBand",
    "lint": "eslint . --ext .js",
    "lint:fix": "eslint . --ext .js --fix",
    "lint:check": "eslint . --ext .js --max-warnings=0"
  },
  "keywords": [
    "delivery",
    "food",
    "orders",
    "mongodb",
    "sessions",
    "nodejs",
    "express",
    "devops"
  ],
  "author": "El Yisus",
  "license": "ISC",
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "connect-flash": "^0.1.1",
    "connect-mongo": "^5.1.0",
    "cookie-parser": "^1.4.6",
    "cross-env": "^7.0.3",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-session": "^1.17.3",
    "express-validator": "^7.0.1",
    "hbs": "^4.2.0",
    "method-override": "^3.0.0",
    "mongoose": "^8.0.3",
    "morgan": "^1.10.1",
    "multer": "^1.4.5-lts.1",
    "nodemailer": "^6.9.7",
    "uuid": "^9.0.1",
    "winston": "^3.19.0"
  },
  "devDependencies": {
    "@jest/globals": "^29.7.0",
    "eslint": "^9.39.2",
    "jest": "^29.7.0",
    "mongodb-memory-server": "^9.1.3",
    "nodemon": "^3.1.10",
    "supertest": "^7.1.4"
  },
  "jest": {
    "testEnvironment": "node",
    "coverageDirectory": "coverage",
    "collectCoverageFrom": [
      "controllers/**/*.js",
      "models/**/*.js",
      "middleware/**/*.js",
      "services/**/*.js",
      "routes/**/*.js",
      "config/**/*.js",
      "monitoring/**/*.js",
      "!node_modules/**",
      "!coverage/**",
      "!tests/**"
    ],
    "testMatch": [
      "**/tests/**/*.test.js"
    ],
    "setupFilesAfterEnv": [
      "<rootDir>/tests/setup.js"
    ],
    "verbose": true,
    "forceExit": true,
    "clearMocks": true,
    "resetMocks": true,
    "restoreMocks": true,
    "testTimeout": 30000,
    "coverageThreshold": {
      "global": {
        "branches": 10,
        "functions": 10,
        "lines": 10,
        "statements": 10
      }
    }
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}